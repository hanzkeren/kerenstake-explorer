{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "env": {
    "PUBLIC_PATH": "/"
  },
  "installCommand": "yarn install --frozen-lockfile || yarn install",
  "buildCommand": "yarn build",
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
